{
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-async-promise-executor": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.js",
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  }
